{
  "name": "pokemon-catalog-production",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "pnpm --filter @pokemon-catalog/database db:generate && turbo build",
    "build:web": "pnpm --filter @pokemon-catalog/database db:generate && pnpm --filter web build",
    "build:api": "pnpm --filter @pokemon-catalog/database db:generate && pnpm --filter api build",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "pnpm --filter @pokemon-catalog/database migrate",
    "db:studio": "pnpm --filter @pokemon-catalog/database studio",
    "vercel-build": "pnpm --filter @pokemon-catalog/database db:generate && pnpm build:web"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "pg": "^8.16.0"
  }
}